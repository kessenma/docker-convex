{
  "name": "convex-tutorial",
  "version": "0.0.0",
  "scripts": {
    "dev:frontend": "vite",
    "build": "tsc && vite build",
    "docker:up": "docker compose --env-file .env.docker up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:generate-admin-key": "docker compose exec backend ./generate_admin_key.sh",
    "self-hosted:setup-manual": "pnpm run docker:up && echo 'Waiting for backend to start...' && sleep 10 && pnpm run docker:generate-admin-key",
    "self-hosted:dev": "npm-run-all --sequential docker:up deploy-functions dev:frontend",
    "self-hosted:stop": "docker compose down",
    "deploy-functions": "convex dev --once",
    "post-create": "./.devcontainer/post-create.sh",
    "post-start": "./.devcontainer/post-start.sh"
  },
  "dependencies": {
    "@faker-js/faker": "^8.0.2",
    "convex": "1.24.8",
    "prettier": "3.5.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.0",
    "@types/node": "^18.17.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "npm-run-all2": "^7.0.0",
    "typescript": "~5.0.3",
    "vite": "^5.4.12"
  }
}
